@model IEnumerable<Sharing>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
              @foreach(var item in Model)
              {
              <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@item.Image" width="100%" height="100%" height="225" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">
                <div class="card-body">
                  <p class="card-text">@item.SharingName</p>
                  <p class="card-text">@item.Introduction</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a type="btn-success" asp-controller="Sharing" asp-action="Detail" asp-route-id="@item.Id"
                      class="btn btn-sm btn-outline-secondary">View</a>
                      <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                    </div>
                    <small class="text-muted">@item.SharingCategory</small>
                  </div>
                </div>
              </div>
            </div>
          }
          </div>
        </div>
      </div>
